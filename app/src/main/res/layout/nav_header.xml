<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="userViewModel"
            type="com.example.wellnessquest.viewmodel.UserViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp"
        android:paddingBottom="24dp"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/header_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WellnessQuest"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/header_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"Coins: " + userViewModel.userLiveData.coins}'
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/header_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"Level: " + userViewModel.userLiveData.currentLevel}'
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</layout>
