            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/gy5"
            app:layout_constraintEnd_toEndOf="@id/gx5"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="@id/gx5"
            app:layout_constraintTop_toTopOf="@id/gy5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
