            app:layout_constraintBottom_toBottomOf="@id/gy9"
            app:layout_constraintEnd_toEndOf="@id/gx9"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="@id/gx9"
