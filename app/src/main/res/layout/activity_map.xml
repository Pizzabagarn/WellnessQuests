        <ImageView
            android:id="@+id/mapImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_map2"
            tools:layout_editor_absoluteX="-28dp"
            tools:layout_editor_absoluteY="-16dp" />

        <TextView
            android:id="@+id/node_0"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:onClick="onNodeClick"
            android:text="Start"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/gy0"
            app:layout_constraintEnd_toEndOf="@id/gx0"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="@id/gx0"
            app:layout_constraintTop_toTopOf="@id/gy0" />

        <TextView
            android:id="@+id/node_1"
            android:layout_width="136dp"
