        <ImageView
            android:id="@+id/avatar"
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:contentDescription="Avatar"
            android:src="@drawable/ic_avatar_from_back"
            app:layout_constraintBottom_toBottomOf="@id/gy0"
            app:layout_constraintEnd_toEndOf="@id/gx0"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@id/gx0"
            app:layout_constraintTop_toTopOf="@id/gy0"
