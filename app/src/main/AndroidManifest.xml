<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wellnessquest">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="WellQuest"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WellnessQuest"
        tools:targetApi="31">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <!-- Aktiviteter i appen -->
        <activity
            android:name=".view.activities.QuestTextActivity"
            android:exported="false" />

        <activity
            android:name=".view.activities.MapActivity"
            android:exported="false" />

        <activity
            android:name=".view.activities.QuestActivity"
            android:exported="false" />

        <activity
            android:name=".view.activities.LoginActivity"
            android:exported="true" />

        <activity
            android:name=".view.activities.HomeActivity"
            android:exported="true" />

        <activity
            android:name=".view.activities.ProfileActivity"
            android:exported="false" />

        <!-- StartActivity körs först -->
        <activity
            android:name=".view.activities.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
